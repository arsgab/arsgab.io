{
  "name": "arsgab.io",
  "version": "1.0.0",
  "description": "",
  "author": "@arsgab",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.1",
    "cssnano": "^6.0.0",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-comment": "^2.0.0",
    "postcss-custom-media": "^9.1.3",
    "postcss-easing-gradients": "^3.0.1",
    "postcss-hash": "^3.0.0",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^4.0.1",
    "postcss-nesting": "^11.2.2",
    "terser": "^5.17.7"
  },
  "scripts": {
    "build": "npm run build_styles && npm run build_scripts",
    "build_styles": "postcss assets/styles/style.css --dir=build --env=production",
    "build_scripts": "terser --compress ecma=2016,drop_console=true --mangle toplevel --output build/script.js -- assets/scripts/*.js",
    "watch": "postcss assets/styles/style.css --dir=build --env=development --watch --verbose",
    "bs": "browser-sync start --config .browsersyncrc.js"
  }
}
